{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "target": "ES2021",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  }
} 