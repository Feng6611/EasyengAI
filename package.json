{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "easyeng-ai",
  "title": "EasyEng AI",
  "description": "AI-powered English writing assistant",
  "icon": "command-icon.png",
  "author": "chen",
  "categories": ["Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "EasyEng AI",
      "description": "AI-powered English writing assistant",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "aiModel",
      "title": "Default AI Model",
      "description": "Choose the default AI model to use",
      "type": "dropdown",
      "required": true,
      "default": "openai-gpt-4o",
      "data": [
        {
          "title": "GPT4o",
          "value": "openai-gpt-4o"
        },
        {
          "title": "GPT4omini",
          "value": "openai-gpt-4o-mini"
        },
        {
          "title": "Claude Sonnet 3.5",
          "value": "anthropic-claude-sonnet"
        },
        {
          "title": "Claude Haiku 3.5",
          "value": "anthropic-claude-haiku"
        },
        {
          "title": "Llama3.1 8B",
          "value": "llama3.1-8b"
        },
        {
          "title": "Llama3.1 70B",
          "value": "llama3.1-70b"
        }
      ]
    },
    {
      "name": "style",
      "title": "Writing Style",
      "description": "Choose the default writing style",
      "type": "dropdown",
      "required": true,
      "default": "professional",
      "data": [
        {
          "title": "Professional",
          "value": "professional"
        },
        {
          "title": "Casual",
          "value": "casual"
        },
        {
          "title": "Academic",
          "value": "academic"
        },
        {
          "title": "Creative",
          "value": "creative"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.4",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@raycast/utils": "^1.10.1",
    "@types/node": "^20.10.3",
    "@types/react": "^18.2.42",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
} 